body
  background-color #fff

body, button, textarea, input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"]
  font-family Vollkorn, Georgia, serif

.root
  padding 0 15px

.centered
  margin-right auto
  margin-left auto

.btn
  border none
  box-shadow 0 2px 1px 0 rgba(0, 0, 0, 0.25)

  .glyphicon
    display inline-block
    vertical-align middle

.btn:active
  margin-top 2px
  margin-bottom -2px

.btn-group-justified
  box-shadow 0 2px 0 0 rgba(0, 0, 0, 0.25)
  border-radius 4px
  .btn
    box-shadow none
    border-width none
  .btn:active
    box-shadow 0 2px 0 0 #fff, inset 0 3px 5px rgba(0, 0, 0, 0.125)
  .btn:first-of-type:active
    box-shadow 0 2px 0 0 #fff, inset 0 3px 5px rgba(0,0,0,0.125)

.page-header
  border-bottom 1px solid rgb(221, 221, 221)
  margin-bottom 10px;

.page-header a
  color rgb(51, 51, 51)

.page-header a:hover, .page-header a:focus
  text-decoration none

.page-title
  margin-top 0

.toolbar
  padding 8px 15px
  background-color #eee
  // box-shadow 2px 2px 3px #fff
  box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)
  // color #ddd
  border-radius 4px
  margin-bottom 10px

  .text
    padding-top 6px
    padding-bottom 6px
    margin 0
    display inline-block
    vertical-align middle

a.create-new-book .glyphicon-plus
  margin-right 1rem

.book-list
  margin-bottom 0

  td:first-of-type
    padding-left 0
  td:last-of-type
    padding-right 0

.btn-group.btn-group-block
  display block
.btn-threequarter
 width 75%
.btn-twothirds
  width 66.666%
.btn-half
  width 50%
.btn-third
  width 33.333%
.btn-quarter
  width 25%

h3.book-summary-title
  margin 0
  font-size 2rem

.book-description-container p
  margin 0

.content-container
  padding 0
  padding-bottom 15px

footer.page-footer
  border-top 1px solid #ddd
  padding-top 8px

.credits .media-object
  max-width 64px
  max-height 64px

@media (min-width: 768px) and (max-width: 979px)
  .container
    max-width 900px

@media only screen and (max-width:767px)
  .root
    padding 0
  .header-content
    position fixed
    width 100%
    height 60px
  .page-header
    margin 0
    padding-top 10px
    padding-bottom 10px
    text-align center
    height 60px
    box-shadow -2px 1px 2px 1px #ccc
    -webkit-box-shadow -2px 1px 2px 1px #ccc
    z-index 999

    body.theme-dark .page-header
      box-shadow -2px 1px 2px 1px #555
      -webkit-box-shadow -2px 1px 2px 1px #555

  .toolbar
    margin-bottom 0


  // .container.root
  //   margin 0

  .scrollable
    overflow-y scroll
    overflow-x hidden !important

  .main
    position fixed
    bottom 0
    margin 0
    margin-top 60px
    top 0
    width 100%
    box-sizing border-box

  footer.page-footer
    padding-left 15px
    padding-right 15px

  .row
    margin-right 0
    margin-left 0
    padding-right -15px
    padding-left -15px

  .page-container
    margin-top 15px

  .book-list
    margin-top 0
    td
      padding 7.5px 15px 7.5px 15px
      border-top none
    td:first-of-type
      padding-left 15px
    td:last-of-type
      padding-right 15px
      padding-bottom 15px

  .responsive-table
    display block !important

  .responsive-table.row
    margin: 0
    border-bottom: 1px solid #ccc

  a:hover, a:focus
    text-decoration none

body.theme-dark
  background-color #222
  color #ddd

  .modal-content, select, textarea, input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"]
    background-color #222
    color #ddd

  input[disabled], select[disabled], textarea[disabled], input[readonly], select[readonly], textarea[readonly], fieldset[disabled] input, fieldset[disabled] select, fieldset[disabled] textarea
    cursor not-allowed
    background-color #333

  .page-header a
    color #ddd

  .toolbar
    background-color #111
    // box-shadow 2px 2px 3px #333
    box-shadow inset 0 3px 5px rgba(255, 255, 255, 0.125)
    // color #222

  .table td
    border-top-color #444

  .btn
    box-shadow 0 2px 1px 0 rgba(255, 255, 255, 0.25)

    .glyphicon
      display inline-block
      vertical-align middle

  .btn:active
    margin-top 2px
    margin-bottom -2px

  .btn-group-justified
    box-shadow 0 2px 0 0 rgba(255, 255, 255, 0.25)
    border-radius 4px
    .btn
      box-shadow none
      border-width none
    .btn:active
      box-shadow 0 2px 0 0 #222, inset 0 3px 5px rgba(255, 255, 255, 0.125)
    .btn:first-of-type:active
      box-shadow 0 2px 0 0 #222, inset 0 3px 5px rgba(255,255,255,0.125)

@css {
  @-ms-viewport{
    width: device-width;
  }
  @media (max-width: 400px) {
    @-ms-viewport {
      width: 320px;
    }
  }
}